<UserControl x:Class="SecureLoginApp.LogIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecureLoginApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Gray">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Center" Margin="0,178,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,209,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Log In" HorizontalAlignment="Center" Margin="0,259,0,0" VerticalAlignment="Top" Width="45" Height="20" Click="Button_Click"/>
        <Button Content="Register user" HorizontalAlignment="Center" Margin="0,347,0,0" VerticalAlignment="Top" Width="80" Height="20" Click="Button_Click_1" />

    </Grid>
</UserControl>
